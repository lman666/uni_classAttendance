page {
  background-color: #fff;
}
.change_avatar {
  padding: 100rpx 0;
}
.change_avatar .avatar-wrapper {
  width: 100rpx;
  height: 100rpx;
  padding: 0;
}
.change_avatar .avatar-wrapper::after {
  border: unset;
}
.change_avatar .avatar-wrapper .avatar {
  width: 100rpx;
  height: 100rpx;
}
.change_nick {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
.change_nick .title {
  margin-right: 120rpx;
}
.change_nick .weui-input {
  flex: 1;
}

